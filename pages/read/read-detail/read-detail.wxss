/* pages/read/read-detail/read-detail.wxss */
@import '/iconfont/iconfont.wxss';
page{
  background: #f6f6f6;
  color: #444;
  font-size: 26rpx;
}
.list{
  padding: 30rpx;
  background: #fff;
}
.author{
  display: flex;
  align-items: center;
}
.author image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%; 
  margin-right: 30rpx;
}
.author text{
  font-weight: bold;
}
.big-pic{
  width: 690rpx;
  height: 300rpx;
  border-radius: 6rpx;
  margin: 30rpx 0;
}
.title{
  font-size: 42rpx;
  font-weight: bold;
  line-height: 52rpx;
  margin-bottom: 30rpx;
}

.intro{
  margin: 20rpx 0;
  font-size: 30rpx;
  color: #444;
  line-height: 54rpx;
}
