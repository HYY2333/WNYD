/* pages/read/read.wxss */
page{
  background: #f6f6f6;
  color: #444;
  font-size: 26rpx;
}
.list{
  padding: 30rpx;
  background: #fff;
  margin-top: 16rpx;
}
.author{
  display: flex;
  align-items: center;
}
.author image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%; 
  margin-right: 30rpx;
}
.author text{
  font-weight: bold;
}
.big-pic{
  width: 690rpx;
  height: 300rpx;
  border-radius: 6rpx;
  margin: 30rpx 0;
}
.title{
  font-size: 42rpx;
  font-weight: bold;
  line-height: 52rpx; 
}
.title .tit{
  display:inline-block;
  width: 74rpx;
  height: 44rpx;
  background: #bc7878;
  border-radius: 44rpx;
  text-align: center;
  line-height: 44rpx;
  color: #fff;
  font-size: 26rpx;
  vertical-align: middle;
  position:relative;
  bottom: 5rpx;
 }
.intro{
  line-height: 42rpx;
  color: #7f7f7f;
  margin-top: 25rpx;
}
.num{
  color: #c0c0c0;
  display: flex;
  justify-content:  space-between;
  align-items: center;
  margin-top: 20rpx;
}